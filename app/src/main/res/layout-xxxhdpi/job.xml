!-->

    <TextView
        android:id="@+id/text_title"
        android:text="Imagem Sem Fundo"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_green_light"
        android:textStyle="bold"
        android:textSize="35sp"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_in"
        android:layout_below="@id/text_title"
        android:textColor="@android:color/black"
        android:text="Selecionar Imagem Original.jpg"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/button_in"
        android:text="Buscar"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_below="@id/text_in"
        android:layout_marginTop="80dp"
        android:textSize="23sp"
        android:layout_height="60dp"/>

    <Button
        android:id="@+id/button_start"
        android:layout_below="@id/button_in"
        android:text="Iniciar"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:enabled="false"
        android:layout_width="150dp"
        android:textSize="23sp"
        android:layout_height="60dp"/>

    <TextView
        android:id="@+id/text_credits"
        android:text="Copyright 2022. Eduardo Programador"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>