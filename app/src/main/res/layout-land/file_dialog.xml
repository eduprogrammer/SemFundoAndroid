    <TextView
        android:id="@+id/text_choose_file"
        android:text="Escolher Imagem"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_cur_path"
        android:text="Local Atual: /storage/emulated/0/sdcard/DCIM"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/text_choose_file"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/image_back"
        android:src="@drawable/ic_arrow_back"
        android:layout_below="@id/text_cur_path"
        android:layout_marginTop="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <ImageView
        android:id="@+id/image_forward"
        android:src="@drawable/ic_arrow_forward"
        android:layout_below="@id/text_cur_path"
        android:layout_alignParentRight="true"
        android:layout_width="50dp"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"/>

    <ListView
        android:id="@+id/list_files"
        android:layout_below="@id/image_forward"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



</RelativeLayout>